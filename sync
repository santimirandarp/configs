#/bin/env bash
# I have all configuration stuff in this folder
# synced with the specific file or directory.
# after clonning they sould be placed back in the source directory
rsync "$HOME"/.vimrc .vimrc
rsync "$HOME"/.bash_aliases .bash_aliases
rsync -r "$HOME"/wallpaper/ wallpaper # **contents** of wallpaper into wallpaper
rsync -r "$HOME"/.config/awesome/ .config/awesome
rsync "$HOME"/.config/alacritty.yml .config/alacritty.yml
rsync "$HOME"/clones/documents/md/linux/installedSoftware installed.md
rsync /etc/netplan/simple.yaml ./netplan/simple.yaml
